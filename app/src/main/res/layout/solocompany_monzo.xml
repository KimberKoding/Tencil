<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="uk.co.tencil.solocompany_monzo">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        app:headerLayout="@layout/menu_header"
        app:menu="@menu/main_menu" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightWhite"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="uk.co.tencil.solo_company">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="#fff"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/back_pressedsolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/goback"
                        android:onClick="backDashsolo"
                        android:padding="15dp"
                        android:src="@drawable/general_back_icon" />

                    <TextView
                        android:id="@+id/business_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/raleway_bold"
                        android:paddingTop="8dp"
                        android:text="Monzo"
                        android:textColor="@color/colorAccent"
                        android:textSize="23sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="30dp"
                    android:background="#fff">

                    <LinearLayout
                        android:id="@+id/featured_background"
                        android:layout_width="500dp"
                        android:layout_height="800dp"
                        android:layout_margin="0dp"
                        android:background="#fff"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"

                        tools:ignore="RtlSymmetry">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/monzo"
                            app:civ_border_color="#000"
                            app:civ_border_width="5dp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textbusiness"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="50dp"
                                android:text="Monzo"
                                android:textAllCaps="true"
                                android:textColor="#000"
                                android:textSize="25sp" />


                            <TextView
                                android:id="@+id/textbusiness2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textbusiness"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="30dp"
                                android:text="Monzo Bank Ltd, is an online bank based in the United Kingdom. Monzo was one of the earliest of a number of new app-based challenger banks in the UK."
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/resources"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp"
                            android:text="@string/resources"
                            android:textAllCaps="true"
                            android:textColor="#000"

                            android:textSize="25sp" />


                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="200dp">

                            <View
                                android:id="@+id/strut"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_centerHorizontal="true" />

                            <Button
                                android:id="@+id/website"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="5dp"
                                android:backgroundTint="#056F98"
                                android:onClick="websitetest"
                                android:text="@string/website"
                                android:textColor="#fff"
                                app:cornerRadius="20dp" />

                            <Button
                                android:id="@+id/socialmedia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="130dp"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="#056F98"
                                android:onClick="socialmedia"
                                android:text="@string/socialmedis"
                                android:textColor="#fff"
                                app:cornerRadius="20dp" />

                            <Button
                                android:id="@+id/careers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:backgroundTint="#16194E"
                                android:onClick="careers"
                                android:text="Careers"
                                android:textColor="#fff"
                                app:cornerRadius="20dp" />

                            <Button
                                android:id="@+id/contact"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginTop="100dp"
                                android:layout_marginEnd="0dp"
                                android:backgroundTint="#2B952F"
                                android:onClick="contact"
                                android:text="@string/contact"
                                android:textColor="#fff"
                                app:cornerRadius="20dp" />


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="News (This feature will be live on full release)"
                                android:textAlignment="center"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <androidx.cardview.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
                                android:id="@+id/card_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="@color/white"
                                card_view:cardCornerRadius="50dp"
                                card_view:cardElevation="5dp"
                                card_view:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="30dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView"
                                        android:layout_width="0dp"
                                        android:layout_height="80dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/monzo"
                                        android:tag="image_tag" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="12dp"
                                        android:layout_weight="2"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/textViewName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="10dp"
                                            android:text="News Headline"
                                            android:textAppearance="?android:attr/textAppearanceLarge" />

                                        <TextView
                                            android:id="@+id/textViewVersion"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="10dp"

                                            android:text="07/04/2021"
                                            android:textAppearance="?android:attr/textAppearanceMedium" />

                                    </LinearLayout>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>













